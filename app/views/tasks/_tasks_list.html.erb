<h2>Listing Tasks</h2>

<table id='tasks'>
  <thead>
  <tr>
    <th></th>
    <th>ID</th>
    <th>Person</th>
    <th>Checktime</th>
    <th>Links</th>
    <th>Result</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @tasks.each do |task| %>
      <tr>
        <td><%= check_box_tag('checked',task.id) %> </td>
        <td><%= task.id %></td>
        <td><%= task.person %></td>
        <td><%= task.checktime %></td>
        <td><%= task.urls.split[0] + "..." %></td>
        <td><%= task.result %> </td>

        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, confirm: 'Are you sure?', method: :delete %></td>
        <td><%= link_to 'Check', check_task_path(task) %></td>

      </tr>


  <% end %>
  </tbody>
</table>

<br/>